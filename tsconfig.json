{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "platforms",
        "demo"
    ]
}